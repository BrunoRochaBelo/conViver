<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="conViver.Mobile.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="24"
            Spacing="24">

            <Label
                Text="Dashboard"
                Style="{StaticResource H1LabelStyle}"
                Margin="0,0,0,12"/>

            <!-- Card 1: Inadimplência -->
            <Frame Style="{StaticResource Frame}">
                <VerticalStackLayout Spacing="8">
                    <Label
                        Text="Inadimplência"
                        Style="{StaticResource H4LabelStyle}" />
                    <Label
                        Text="15%"
                        Style="{StaticResource H3LabelStyle}"
                        TextColor="{AppThemeBinding Light={StaticResource CvSemanticError}, Dark={StaticResource CvSemanticErrorDark}}"/>
                    <Label
                        Text="Valor total: R$ 12.345,00"
                        Style="{StaticResource SmallLabelStyle}" />
                </VerticalStackLayout>
            </Frame>

            <!-- Card 2: Saldo em Conta -->
            <Frame Style="{StaticResource Frame}">
                <VerticalStackLayout Spacing="8">
                    <Label
                        Text="Saldo em Conta"
                        Style="{StaticResource H4LabelStyle}" />
                    <Label
                        Text="R$ 56.789,00"
                        Style="{StaticResource H3LabelStyle}"
                        TextColor="{AppThemeBinding Light={StaticResource CvSemanticSuccess}, Dark={StaticResource CvSemanticSuccessDark}}"/>
                    <Label
                        Text="Atualizado em 25/07/2024"
                        Style="{StaticResource SmallLabelStyle}" />
                </VerticalStackLayout>
            </Frame>

            <!-- Card 3: Avisos Recentes (Example with list-like items) -->
            <Frame Style="{StaticResource Frame}">
                <VerticalStackLayout Spacing="8">
                    <Label
                        Text="Avisos Recentes"
                        Style="{StaticResource H4LabelStyle}" />
                    <Label
                        Text="- Manutenção do elevador Bloco A agendada."
                        Style="{StaticResource BodyLabelStyle}" />
                    <Label
                        Text="- Reunião de condomínio próxima terça."
                        Style="{StaticResource BodyLabelStyle}" />
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
