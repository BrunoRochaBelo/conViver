<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- New Defined Palette -->
    <Color x:Key="CvPrimaryBlue">#007AFF</Color>
    <Color x:Key="CvPrimaryGreen">#34C759</Color>
    <Color x:Key="CvPrimaryOrange">#FF9500</Color>
    <Color x:Key="CvPrimaryRed">#FF3B30</Color>

    <Color x:Key="CvGray100">#F2F2F7</Color> <!-- Page Background -->
    <Color x:Key="CvGray200">#E5E5EA</Color>
    <Color x:Key="CvGray300">#D1D1D6</Color>
    <Color x:Key="CvGray400">#C7C7CC</Color> <!-- Borders -->
    <Color x:Key="CvGray500">#AEAEB2</Color> <!-- Subtle text, icons, placeholders -->
    <Color x:Key="CvGray600">#8E8E93</Color> <!-- Body text -->
    <Color x:Key="CvGray900">#1C1C1E</Color> <!-- Primary text -->

    <Color x:Key="CvWhite">#FFFFFF</Color>
    <Color x:Key="CvBlack">#000000</Color> <!-- For specific cases if CvGray900 isn't dark enough -->

    <Color x:Key="CvTextPrimary">#1C1C1E</Color>
    <Color x:Key="CvTextSecondary">#8E8E93</Color>
    <Color x:Key="CvTextOnPrimary">#FFFFFF</Color>
    <Color x:Key="CvTextPlaceholder">#AEAEB2</Color>
    <Color x:Key="CvTextLink">#007AFF</Color>

    <Color x:Key="CvBackgroundLight">#F2F2F7</Color>
    <Color x:Key="CvBackgroundWhite">#FFFFFF</Color>

    <Color x:Key="CvSemanticSuccess">#34C759</Color>
    <Color x:Key="CvSemanticWarning">#FF9500</Color>
    <Color x:Key="CvSemanticError">#FF3B30</Color>
    <Color x:Key="CvSemanticInfo">#007AFF</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="CvPrimaryBlueBrush" Color="{StaticResource CvPrimaryBlue}"/>
    <SolidColorBrush x:Key="CvPrimaryGreenBrush" Color="{StaticResource CvPrimaryGreen}"/>
    <SolidColorBrush x:Key="CvPrimaryOrangeBrush" Color="{StaticResource CvPrimaryOrange}"/>
    <SolidColorBrush x:Key="CvPrimaryRedBrush" Color="{StaticResource CvPrimaryRed}"/>

    <SolidColorBrush x:Key="CvGray100Brush" Color="{StaticResource CvGray100}"/>
    <SolidColorBrush x:Key="CvGray200Brush" Color="{StaticResource CvGray200}"/>
    <SolidColorBrush x:Key="CvGray300Brush" Color="{StaticResource CvGray300}"/>
    <SolidColorBrush x:Key="CvGray400Brush" Color="{StaticResource CvGray400}"/>
    <SolidColorBrush x:Key="CvGray500Brush" Color="{StaticResource CvGray500}"/>
    <SolidColorBrush x:Key="CvGray600Brush" Color="{StaticResource CvGray600}"/>
    <SolidColorBrush x:Key="CvGray900Brush" Color="{StaticResource CvGray900}"/>

    <SolidColorBrush x:Key="CvWhiteBrush" Color="{StaticResource CvWhite}"/>
    <SolidColorBrush x:Key="CvBlackBrush" Color="{StaticResource CvBlack}"/>

    <SolidColorBrush x:Key="CvTextPrimaryBrush" Color="{StaticResource CvTextPrimary}"/>
    <SolidColorBrush x:Key="CvTextSecondaryBrush" Color="{StaticResource CvTextSecondary}"/>
    <SolidColorBrush x:Key="CvTextOnPrimaryBrush" Color="{StaticResource CvTextOnPrimary}"/>
    <SolidColorBrush x:Key="CvTextPlaceholderBrush" Color="{StaticResource CvTextPlaceholder}"/>
    <SolidColorBrush x:Key="CvTextLinkBrush" Color="{StaticResource CvTextLink}"/>

    <SolidColorBrush x:Key="CvBackgroundLightBrush" Color="{StaticResource CvBackgroundLight}"/>
    <SolidColorBrush x:Key="CvBackgroundWhiteBrush" Color="{StaticResource CvBackgroundWhite}"/>

    <SolidColorBrush x:Key="CvSemanticSuccessBrush" Color="{StaticResource CvSemanticSuccess}"/>
    <SolidColorBrush x:Key="CvSemanticWarningBrush" Color="{StaticResource CvSemanticWarning}"/>
    <SolidColorBrush x:Key="CvSemanticErrorBrush" Color="{StaticResource CvSemanticError}"/>
    <SolidColorBrush x:Key="CvSemanticInfoBrush" Color="{StaticResource CvSemanticInfo}"/>

    <!-- AppThemeBinding for colors that need to adapt (example) -->
    <!-- You'll need to define Dark theme equivalents for these if you use AppThemeBinding extensively -->
    <!-- For this task, focusing on light theme consistency as per instructions. -->
    <Color x:Key="AppBackgroundColor">#F2F2F7</Color> <!-- Light theme default -->
    <Color x:Key="AppTextColor">#1C1C1E</Color> <!-- Light theme default -->

    <!-- Dark Theme Color Definitions -->
    <Color x:Key="CvPrimaryBlueDark">#0A84FF</Color>
    <Color x:Key="CvPrimaryGreenDark">#30D158</Color>
    <Color x:Key="CvPrimaryOrangeDark">#FFD60A</Color>
    <Color x:Key="CvPrimaryRedDark">#FF453A</Color>

    <Color x:Key="CvBackgroundLightDark">#1C1C1E</Color>      <!-- Page background -->
    <Color x:Key="CvBackgroundElementDark">#2C2C2E</Color>   <!-- Card, Modal, Entry backgrounds -->
    <Color x:Key="CvBackgroundMediumDark">#3A3A3C</Color>    <!-- Slightly lighter than element bg if needed -->

    <Color x:Key="CvTextPrimaryDark">#F2F2F7</Color>
    <Color x:Key="CvTextSecondaryDark">#8E8E93</Color>
    <Color x:Key="CvTextPlaceholderDark">#636366</Color> <!-- Darker placeholder for light text -->
    <Color x:Key="CvTextOnPrimaryDark">#FFFFFF</Color>    <!-- Text on primary blue button (dark theme) -->
    <Color x:Key="CvTextLinkDark">#0A84FF</Color>

    <Color x:Key="CvBorderColorDark">#48484A</Color>
    <Color x:Key="CvBorderSubtleDark">#3A3A3C</Color>

    <Color x:Key="CvSemanticSuccessDark">#30D158</Color>
    <Color x:Key="CvSemanticWarningDark">#FFD60A</Color>
    <Color x:Key="CvSemanticErrorDark">#FF453A</Color>
    <Color x:Key="CvSemanticInfoDark">#0A84FF</Color>

    <!-- Specific UI element colors for dark theme -->
    <Color x:Key="CvButtonDefaultBgDark">#3A3A3C</Color>
    <Color x:Key="CvButtonDefaultTextDark">#F2F2F7</Color> <!-- Although default buttons might use TextPrimaryDark -->
    <Color x:Key="CvButtonDisabledBgDark">#2C2C2E</Color>
    <Color x:Key="CvButtonDisabledTextDark">#48484A</Color>

    <Color x:Key="CvShellTabBarBgDark">#2C2C2E</Color>
    <Color x:Key="CvShellNavBarBgDark">#1C1C1E</Color>

    <!-- Brushes for Dark Theme (Optional - only if brushes are directly used and need theme switching) -->
    <!-- For this task, we are focusing on AppThemeBinding for Colors, so these might not be strictly necessary yet -->
    <SolidColorBrush x:Key="CvPrimaryBlueDarkBrush" Color="{StaticResource CvPrimaryBlueDark}"/>
    <SolidColorBrush x:Key="CvBackgroundLightDarkBrush" Color="{StaticResource CvBackgroundLightDark}"/>
    <SolidColorBrush x:Key="CvBackgroundElementDarkBrush" Color="{StaticResource CvBackgroundElementDark}"/>
    <SolidColorBrush x:Key="CvTextPrimaryDarkBrush" Color="{StaticResource CvTextPrimaryDark}"/>
    <SolidColorBrush x:Key="CvBorderColorDarkBrush" Color="{StaticResource CvBorderColorDark}"/>

</ResourceDictionary>
